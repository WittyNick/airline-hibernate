<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlets -->

    <servlet>
        <servlet-name>flightEditServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.FlightEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightEditServlet</servlet-name>
        <url-pattern>/administrator/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightSaveServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.FlightSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightSaveServlet</servlet-name>
        <url-pattern>/administrator/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightDeleteServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.FlightDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightDeleteServlet</servlet-name>
        <url-pattern>/flight/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewEditServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.CrewEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewEditServlet</servlet-name>
        <url-pattern>/dispatcher/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewSaveServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.CrewSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewSaveServlet</servlet-name>
        <url-pattern>/dispatcher/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employeeAddServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.EmployeeAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeAddServlet</servlet-name>
        <url-pattern>/dispatcher/employee/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employeeDeleteServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.EmployeeDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeDeleteServlet</servlet-name>
        <url-pattern>/dispatcher/employee/delete</url-pattern>
    </servlet-mapping>

    <!-- Welcome page -->

    <welcome-file-list>
        <welcome-file>html/welcome.html</welcome-file>
    </welcome-file-list>

    <!-- Session -->

    <session-config>
        <session-timeout>600</session-timeout>
    </session-config>
</web-app>