<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlets -->

    <servlet>
        <servlet-name>welcomeServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userValidateServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.UserValidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userValidateServlet</servlet-name>
        <url-pattern>/user/validate</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>signInServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.SignInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signInServlet</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>signOutServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.SignOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signOutServlet</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>administratorServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.AdministratorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>administratorServlet</servlet-name>
        <url-pattern>/administrator</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightEditServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.FlightEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightEditServlet</servlet-name>
        <url-pattern>/administrator/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightSaveServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.FlightSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightSaveServlet</servlet-name>
        <url-pattern>/administrator/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>flightDeleteServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.FlightDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>flightDeleteServlet</servlet-name>
        <url-pattern>/flight/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dispatcherServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.DispatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcherServlet</servlet-name>
        <url-pattern>/dispatcher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewEditServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.CrewEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewEditServlet</servlet-name>
        <url-pattern>/dispatcher/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewSaveServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.CrewSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewSaveServlet</servlet-name>
        <url-pattern>/dispatcher/save</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>crewDeleteServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.CrewDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>crewDeleteServlet</servlet-name>
        <url-pattern>/crew/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employeeAddServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.EmployeeAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeAddServlet</servlet-name>
        <url-pattern>/dispatcher/employee/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>employeeDeleteServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.EmployeeDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>employeeDeleteServlet</servlet-name>
        <url-pattern>/dispatcher/employee/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>localeServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.LocaleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>localeServlet</servlet-name>
        <url-pattern>/locale</url-pattern>
        <url-pattern>/administrator/locale</url-pattern>
        <url-pattern>/dispatcher/locale</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>localeChangeServlet</servlet-name>
        <servlet-class>by.epam.training.external.controller.servlet.LocaleChangeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>localeChangeServlet</servlet-name>
        <url-pattern>/locale/change</url-pattern>
        <url-pattern>/administrator/locale/change</url-pattern>
        <url-pattern>/dispatcher/locale/change</url-pattern>
    </servlet-mapping>

    <!-- Filters -->

    <filter>
        <filter-name>administratorFilter</filter-name>
        <filter-class>by.epam.training.external.controller.filter.AdministratorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>administratorFilter</filter-name>
        <url-pattern>/administrator/*</url-pattern>
        <url-pattern>/html/administrator.html</url-pattern>
        <url-pattern>/html/flight-edit.html</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>dispatcherFilter</filter-name>
        <filter-class>by.epam.training.external.controller.filter.DispatcherFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>dispatcherFilter</filter-name>
        <url-pattern>/dispatcher/*</url-pattern>
        <url-pattern>/html/dispatcher.html</url-pattern>
        <url-pattern>/html/crew-edit.html</url-pattern>
    </filter-mapping>

    <!-- Welcome page -->

    <welcome-file-list>
        <welcome-file>html/welcome.html</welcome-file>
    </welcome-file-list>

    <!-- Session -->

    <session-config>
        <session-timeout>600</session-timeout>
    </session-config>
</web-app>